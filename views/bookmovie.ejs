<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Movie</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-900 font-sans text-gray-200">

    <!-- Navbar -->
    <header class="bg-gradient-to-r from-purple-800 to-indigo-600 shadow-lg sticky top-0 z-10">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between h-16">
            <a href="/" class="text-3xl font-extrabold text-white tracking-wide">CineBook</a>
            <ul class="hidden md:flex space-x-6">
                <li><a href="/api/v1/movies" class="text-gray-300 hover:text-white font-medium">Movies</a></li>
                <li><a href="/bookings" class="text-gray-300 hover:text-white font-medium">My Bookings</a></li>
                <li><a href="/user" class="text-gray-300 hover:text-white font-medium">User</a></li>
                <li><a href="/logout" class="text-gray-300 hover:text-white font-medium">Logout</a></li>
            </ul>
        </nav>
    </header>

    <!-- Banner Image (Movie Poster) -->
    <section class="relative w-full h-96 bg-cover bg-center" style="background-image: url('<%= movie.posterUrl %>');">
        <div class="absolute inset-0 bg-black opacity-50"></div>
        <div class="relative z-10 flex items-center justify-center w-full h-full text-center text-white">
            <h1 class="text-4xl font-bold">CineBook</h1>
        </div>
    </section>

    <!-- Booking Form Section -->
    <section class="py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto bg-gray-800 p-8 rounded-xl shadow-xl space-y-6">
            <h2 class="text-3xl font-bold text-indigo-400 mb-8 text-center">Book Your Show</h2>

            <!-- Movie Details -->
            <div class="mb-6">
                <h3 class="text-2xl font-semibold text-white mb-2">Movie: <%= movie.title %>
                </h3>
                <p class="text-sm"><strong>Language:</strong>
                    <%= movie.language %>
                </p>
                <p class="text-sm"><strong>Duration:</strong>
                    <%= movie.duration %> minutes
                </p>
                <p class="text-sm"><strong>Genre:</strong>
                    <% if (Array.isArray(movie.genre)) { %>
                        <%= movie.genre.join(', ') %>
                    <% } else { %>
                        <%= movie.genre %>
                    <% } %>
                </p>
            </div>

            <!-- Booking Form -->
            <form action="/bookings" method="POST" class="space-y-6">
                <input type="hidden" name="movieId" value="<%= movie._id %>">

                <!-- Showtime Selection -->
                <div>
                    <label for="showtime" class="block text-sm font-medium text-gray-400">Select Showtime:</label>
                    <select name="showtime" id="showtime" required class="mt-1 block w-full bg-gray-700 border-gray-600 text-gray-200 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 py-3 px-4">
                        <% if (showtimes && showtimes.length > 0) { %>
                            <% showtimes.forEach(showtime => { %>
                                <option value="<%= showtime._id %>"><%= showtime.date.toDateString() %>, <%= showtime.time %></option>
                            <% }); %>
                        <% } else { %>
                            <option disabled>No showtimes available</option>
                        <% } %>
                    </select>
                </div>

                <!-- Seat Selection -->
                <div>
                    <label for="seats" class="block text-sm font-medium text-gray-400">Number of Seats:</label>
                    <input type="number" name="seats" id="seats" min="1" max="10" required class="mt-1 block w-full bg-gray-700 border-gray-600 text-gray-200 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 py-3 px-4">
                </div>

                <!-- User Details -->
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-400">Your Name:</label>
                    <input type="text" name="name" id="name" required class="mt-1 block w-full bg-gray-700 border-gray-600 text-gray-200 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 py-3 px-4">
                </div>
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-400">Your Email:</label>
                    <input type="email" name="email" id="email" required class="mt-1 block w-full bg-gray-700 border-gray-600 text-gray-200 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 py-3 px-4">
                </div>
                <div>
                    <label for="phone" class="block text-sm font-medium text-gray-400">Your Phone:</label>
                    <input type="tel" name="phone" id="phone" required class="mt-1 block w-full bg-gray-700 border-gray-600 text-gray-200 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 py-3 px-4">
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="w-full py-3 px-6 bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 text-white rounded-lg font-bold text-lg shadow-md transform hover:scale-105 transition-transform duration-200">
                        Proceed To Payment
                    </button>
                </div>
            </form>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-900 py-6">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col items-center">
            <p class="text-sm text-gray-500">&copy; 2024 CineBook. All Rights Reserved.</p>
            <p class="text-sm text-gray-500">Made with ❤️ by Movie Enthusiasts</p>
        </div>
    </footer>

</body>
</html>